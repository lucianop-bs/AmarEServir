      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Salvar tokens automaticamente",
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    // Ajustado para estrutura plana (sem .value)",
                  "    if (response.token) {",
                  "        pm.environment.set('access_token', response.token);",
                  "        pm.environment.set('refresh_token', response.refreshToken);",
                  "        pm.environment.set('user_id', response.id);",
                  "        console.log('‚úÖ Tokens salvos automaticamente!');",
                  "        console.log('üîë Access Token: ' + response.token.substring(0, 20) + '...');",
                  "    }",
                  "}",
                  "",
                  "pm.test('Login realizado com sucesso', function () {",
                  "    pm.response.to.have.status(200);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response).to.have.property('token');",
                  "    pm.expect(response).to.have.property('refreshToken');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@amarservir.com.br\",\n  \"password\": \"Admin@123\"\n}"
